@page "/login"
@using NovelReader.UI.Common.Components

<body class="font-sans antialiased text-zinc-900 bg-zinc-100 dark:bg-zinc-800 dark:text-white">
    <div class="min-h-screen flex flex-col items-center justify-center">
        <div class="flex flex-col md:flex-row rounded-lg shadow-lg overflow-hidden">
            <div class="md:w-1/2 bg-teal-400 p-8">
                <img src="https://placehold.co/600x800" alt="Bird illustration" class="max-w-full h-auto">
            </div>
            <div class="md:w-1/2 bg-white p-8 dark:bg-zinc-700">
                <h2 class="text-3xl font-semibold text-center mb-8">Login</h2>
                <Form OnSubmit="@OnLogin">
                    <div class="mb-4">
						<Input Label="Username" 
                            @bind-Value="@m_ViewModel.Username"
                            Validate="m_ViewModel.ValidateUsername"
                            Placeholder="Enter the username" />
                    </div>
                    <div class="mb-6">
						<Input Label="Password" 
                                @bind-Value="@m_ViewModel.Password"
                                Type="InputType.Password"
                                Placeholder="Enter the password" />
                        <a href="#" 
                                class="text-xs text-teal-600 hover:underline dark:text-teal-300">
                            Forgot password?
                        </a>
                    </div>
                    <FormSubmit />
                    <div class="text-center my-4">
                        <span class="text-sm">or</span>
                    </div>
                    <button type="button" 
                            class="w-full bg-zinc-300 text-zinc-800 px-3 py-2 rounded-lg hover:bg-zinc-400 flex items-center justify-center google-btn">
                        <div class="mr-2">
							<i class="fa-brands fa-google"></i>
                        </div>
                        <span>Sign in with Google</span>
                    </button>
                    <p class="text-sm text-center mt-4">
                        Have not an account? 
                        <a href="/register" class="text-teal-600 hover:underline dark:text-teal-300">Create Account</a>
                    </p>
                </Form>
            </div>
        </div>
    </div>
</body>

